<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    android:paddingVertical="@dimen/activity_vertical_margin"
    tools:context=".ui.theory.HandlerTestActivity">

    <Button
        android:id="@+id/btnPostMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Message"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPostDelayMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Delay Message"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@id/btnPostMessage"
        app:layout_constraintTop_toBottomOf="@id/btnPostMessage" />

    <Button
        android:id="@+id/btnAddIdleHandler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Idle Handler"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@id/btnPostMessage"
        app:layout_constraintTop_toBottomOf="@id/btnPostDelayMessage" />

    <Button
        android:id="@+id/btnGetTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Time"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@id/btnPostMessage"
        app:layout_constraintTop_toBottomOf="@id/btnAddIdleHandler" />

    <Button
        android:id="@+id/btnOtherHandler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Handler"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@id/btnPostMessage"
        app:layout_constraintTop_toBottomOf="@id/btnGetTime" />

</androidx.constraintlayout.widget.ConstraintLayout>