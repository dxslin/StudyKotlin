<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="event"
            type="com.slin.git.entity.ReceivedEvent" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/fragment_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/fragment_vertical_margin">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{event.payload.action}"
            android:textAppearance="@style/Text.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@sample/received_events.json/data/payload/action" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_2"
            android:text="@{event.repo.name}"
            android:textAppearance="@style/Text.Large"
            android:textColor="?attr/colorAccent"
            app:layout_constraintStart_toEndOf="@id/tv_action"
            app:layout_constraintTop_toTopOf="@id/tv_action"
            tools:text="@sample/received_events.json/data/repo/name" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/grid_2"
            app:layout_constraintStart_toStartOf="@id/tv_action"
            app:layout_constraintTop_toBottomOf="@id/tv_action"
            tools:srcCompat="@mipmap/ic_launcher_round" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_actor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_2"
            android:text="@{event.actor.displayLogin}"
            android:textAppearance="@style/Text.Medium"
            app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_avatar"
            tools:text="@sample/received_events.json/data/actor/display_login" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>