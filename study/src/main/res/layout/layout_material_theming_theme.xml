<?xml version="1.0" encoding="utf-8"?>
<merge>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_material_theming_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        tools:ignore="HardcodedText">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="0. Theme"
            android:textAppearance="@style/TextTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_change_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="changeTheme"
            android:text="Theme: 默认"
            android:textAppearance="@style/TextBody1"
            app:layout_constraintStart_toStartOf="@id/mtv_theme"
            app:layout_constraintTop_toBottomOf="@id/mtv_theme" />

        <Button
            android:id="@+id/btn_change_night_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:onClick="changeNightMode"
            android:text="NightMode:"
            android:textAppearance="@style/TextBody1"
            app:layout_constraintStart_toEndOf="@id/btn_change_theme"
            app:layout_constraintTop_toTopOf="@id/btn_change_theme" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>