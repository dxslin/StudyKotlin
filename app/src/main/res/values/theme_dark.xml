<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="color_accent_night">#00B0FF</color>
    <color name="color_primary_night">#F5F5F5</color>
    <color name="color_primary_dark_night">#000000</color>
    <color name="color_primary_variant_night">#C2C2C2</color>
    <color name="color_on_primary_night">#000000</color>
    <color name="color_secondary_night">#768FFF</color>
    <color name="color_secondary_variant_night">#3C62CB</color>
    <color name="color_on_secondary_night">#000000</color>
    <color name="color_error_night">#FF7961</color>
    <color name="color_on_error_night">#000000</color>
    <color name="color_surface_night">#121212</color>
    <color name="color_on_surface_night">#FFFFFF</color>
    <color name="color_background_night">#000000</color>
    <color name="color_on_background_night">#FFFFFF</color>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.Bridge">
        <!-- Global color attributes -->
        <!-- 您的应用的主要品牌颜色，主要用于主题 actionBar默认使用该颜色,Toolbar导航栏的底色-->
        <item name="colorPrimary">@color/color_primary_night</item>
        <!-- 应用的主要暗色调,statusBarColor默认使用该颜色-->
        <item name="colorPrimaryDark">@color/color_primary_dark_night</item>
        <!-- CheckBox,RadioButton,SwitchCompat等一般控件的选中效果默认采用该颜色-->
        <item name="colorAccent">@color/color_accent_night</item>
        <!-- 您的主要品牌颜色的较浅/较暗变体，在主题中很少使用-->
        <item name="colorPrimaryVariant">@color/color_primary_variant_night</item>
        <!-- 用于显示在原色上方的元素的颜色（例如，文本和图标，根据可访问性，通常为白色或半透明的黑色）-->
        <item name="colorOnPrimary">@color/color_on_primary_night</item>
        <!-- 您应用程式的次要品牌色彩，主要用于强调某些需要突出的小部件-->
        <item name="colorSecondary">@color/color_secondary_night</item>
        <!-- 您的次要品牌颜色的较浅/较深变体，在主题中很少使用-->
        <item name="colorSecondaryVariant">@color/color_secondary_variant_night</item>
        <!-- 用于显示在辅助颜色顶部的元素的颜色-->
        <item name="colorOnSecondary">@color/color_on_secondary_night</item>
        <!-- 用于错误的颜色（通常为红色阴影）-->
        <item name="colorError">@color/color_error_night</item>
        <!-- 用于显示在错误颜色顶部的元素的颜色-->
        <item name="colorOnError">@color/color_on_error_night</item>
        <!-- 用于表面的颜色（即材料“纸张”，比如卡片，表格，菜单）-->
        <item name="colorSurface">@color/color_surface_night</item>
        <!-- 用于显示在表面颜色顶部的元素的颜色-->
        <item name="colorOnSurface">@color/color_on_surface_night</item>
        <!-- 所有其他屏幕内容后面的颜色-->
        <item name="android:colorBackground">@color/color_background_night</item>
        <item name="android:windowBackground">@color/color_background_night</item>
        <!-- 用于显示在背景色上方的元素的颜色-->
        <item name="colorOnBackground">@color/color_on_background_night</item>

        <!-- ActionBar颜色修改为colorSurface-->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Surface</item>
    </style>


</resources>